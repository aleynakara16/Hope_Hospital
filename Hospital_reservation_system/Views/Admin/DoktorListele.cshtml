@model IEnumerable<Hospital_reservation_system.Models.DoctorViewModel>

<!doctype html>
<html lang="en">
<head>
	<title>DOKTORLAR</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href='https://fonts.googleapis.com/css?family=Roboto:400,100,300,700' rel='stylesheet' type='text/css'>

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<link href="~/css/tablo/style.css" rel="stylesheet" />

</head>
<body>
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-1">
					<h2 class="heading-section">DOKTORLAR</h2>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<div class="table-wrap">
						<table class="table">
							<thead class="thead-dark">
								<tr>
									<th>TC NO</th>
									<th>DOKTOR ADI</th>
									<th>POLİKLİNİK NO</th>
									<th>&nbsp;</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var DoctorViewModel in Model)
								{
									<tr class="alert" role="alert">
										<td>@DoctorViewModel.id</td>
										<td>@DoctorViewModel.name</td>
										<td>@DoctorViewModel.PoliclinicId</td>
										@if (User.Identity.IsAuthenticated)
										{
											if (User.IsInRole("admin"))
											{
												<td>
													<a href="#" class="close" data-dismiss="alert" aria-label="Close">
														<span aria-hidden="true"><i class="fa fa-close"></i></span>
													</a>
												</td>
											}
										}
										
											
										

										


									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</section>
	<script src="~/js/tablo/jquery.min.js"></script>
	<script src="~/js/tablo/popper.js"></script>
	<script src="~/js/tablo/bootstrap.min.js"></script>
	<script src="~/js/tablo/main.js"></script>

</body>
</html>


