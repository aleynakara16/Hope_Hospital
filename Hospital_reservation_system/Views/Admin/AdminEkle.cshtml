@model AdminViewModel
@{
    ViewData["Title"] = "Admin Kayıt";
}


<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>
    </div>
</div>

<div class="row">
    <div class="col-4 offset-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

            <div class="form-group mb-3">
                <label asp-for="Admin_mail" class="form-label">Mail.</label>
                <input asp-for="Admin_mail" class="form-control" placeholder="adınız@sakarya.edu.tr" />
                <span asp-validation-for="Admin_mail" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Admin_Id" class="form-label">TC.</label>
                <input asp-for="Admin_Id" class="form-control" placeholder="TC..." />
                <span asp-validation-for="Admin_Id" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Admin_Password" class="form-label">Password</label>
                <input asp-for="Admin_Password" type="password" class="form-control" placeholder="PassWord!" />
                <span asp-validation-for="Admin_Password" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Admin_Password" class="form-label">Re-Password</label>
                <input asp-for="Admin_Password" type="password" class="form-control" placeholder="PassWord" />
                <span asp-validation-for="Admin_Password" class="text-danger small"></span>
            </div>

            <div class="form-group d-grid mb-3">
                <button type="submit" class="btn btn-primary d-block"><i class="fa-solid fa-paper-plane me-2"></i>Admini Kaydet</button>
            </div>
        </form>
    </div>
</div>
