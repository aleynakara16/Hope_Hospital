<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow " style="background-color: #1c2331;">
            <div class="container-fluid">
                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("admin"))
                    {
                        <a class="navbar-brand" asp-area="" asp-controller="Admin" asp-action="Index">Anasayfa</a>
                    }
                    else
                    {
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>

                    }
                }
                else
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>

                }

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse  collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                       
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("admin"))
                            {
                              
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Admin" asp-action="DoktorEkle">Doktor Ekle</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Admin" asp-action="AdminEkle">Admin Ekle</a>
                                </li>
                            }
                             if (User.IsInRole("user"))
                            {
                              
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Appointment" asp-action="Userappointment">Randevularım</a>
                                </li>
                            }
                            if (User.IsInRole("doctor"))
                            {

                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Appointment" asp-action="Doktorappointment">Randevularım</a>
                                </li>
                            }
                      
                            <li class="nav-item ms-auto">
                                <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="Profil">@User.FindFirst("Username").Value </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="Logout">Çıkış yap</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item ms-auto">
                                <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="Register">Kayadol</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

   
       <main role="main" >
            @RenderBody()
        </main>

    <footer class="text-center text-lg-start text-white" style="background-color: #1c2331; position: fixed; bottom: 0; width: 100%;">
        <!-- Copyright -->
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2)">
            © 2023 made by ALEYNA KARA
        </div>
        <!-- Copyright -->
    </footer>
    <!-- Footer -->
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
